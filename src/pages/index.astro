---
import Layout from '../layouts/Layout.astro';
import routes from '../global/routes';
import ReactLogo from '../components/ReactLogo.astro';

const currentFocus = [
	{
		symbol: "âˆ‘",
		title: "Graph Theory Research",
		description: "Working on the HK property for perfect binary trees with Dr. Nasrollahi-Shirazi and Dr. Andrii Arman",
		link: routes.works,
		command: "research --graph-theory"
	},
	{
		symbol: "Î»",
		title: "Computational Geometry", 
		description: "GADA lab research with Dr. Stephane Durocher",
		link: routes.works,
		command: "research --comp-geometry"
	},
	{
		symbol: "âš›",
		title: "Frontend Development",
		description: "Building web applications at Alpinist Studios",
		link: routes.works,
		command: "work --frontend"
	}
];

const highlights = [
	{
		title: "Graph Theory Research",
		description: "Exploring chromatic polynomials and their applications to network optimization problems.",
		category: "research",
		year: "2024",
		link: routes.works,
		command: "cat ~/projects/graph-theory.md"
	},
	{
		title: "Frontend Development",
		description: "Building modern web applications with TypeScript and React at Alpinist Studios.",
		category: "work", 
		year: "2024",
		link: routes.works,
		command: "ls ~/work/alpinist-studios/"
	}
];

const terminalCommands = [
	"whoami",
	"pwd", 
	"ls -la",
	"cat about.txt",
	"./start_projects.sh",
	"grep -r 'mathematics' ~/research/"
];
---

<Layout title="atish@terminal:~$ whoami">
	<!-- Terminal Header -->
	<div class="bg-primary-900 border-b-2 border-tertiary-base">
		<div class="container mx-auto px-4">
			<div class="flex items-center justify-between py-2 text-xs">
				<div class="flex items-center space-x-4">
					<div class="flex space-x-2">
						<div class="w-3 h-3 rounded-full bg-red-500"></div>
						<div class="w-3 h-3 rounded-full bg-yellow-500"></div>
						<div class="w-3 h-3 rounded-full bg-green-500"></div>
					</div>
					<span class="text-text-400 font-mono">atish@terminal: ~</span>
				</div>
				<div class="text-text-500 font-mono">
					{new Date().toLocaleTimeString()} | session: active
				</div>
			</div>
		</div>
	</div>

	<!-- Main Terminal Content -->
	<section class="min-h-screen bg-primary-1000 text-tertiary-200 font-mono">
		<div class="container mx-auto px-4 py-6 max-w-6xl">
			
			<!-- Terminal Prompt & Intro -->
			<div class="mb-8">
				<div class="text-tertiary-base mb-2">
					<span class="text-secondary-400">atish@terminal</span>:<span class="text-tertiary-base">~</span>$ whoami
				</div>
				<div class="pl-4 mb-6 space-y-2">
					<div class="text-tertiary-200">
						<span class="text-tertiary-base">></span> Atish Maharjan
					</div>
					<div class="text-text-400">
						<span class="text-tertiary-base">></span> mathematician | computer_scientist | problem_solver
					</div>
					<div class="text-text-400">
						<span class="text-tertiary-base">></span> location: University of Manitoba
					</div>
					<div class="text-text-400">
						<span class="text-tertiary-base">></span> status: exploring the intersection of theory and innovation
					</div>
				</div>

				<div class="text-tertiary-base mb-2">
					<span class="text-secondary-400">atish@terminal</span>:<span class="text-tertiary-base">~</span>$ cat welcome.txt
				</div>
				<div class="pl-4 mb-6 max-w-4xl">
					<div class="border-l-2 border-tertiary-base pl-4 text-text-300 leading-relaxed">
						Hey there! ðŸ‘‹ Welcome to my terminal interface.
						<br><br>
						I'm a mathematician and computer scientist currently studying at the University of Manitoba 
						and building web applications at Alpinist Studios. I love exploring the beautiful intersection 
						of abstract mathematical theory and practical software innovation.
						<br><br>
						Feel free to explore the commands below or navigate through my projects and research.
					</div>
				</div>

				<div class="flex flex-wrap gap-4 mb-8">
					<a 
						href={routes.about} 
						class="inline-flex items-center px-4 py-2 bg-tertiary-base text-primary-1000 font-semibold hover:bg-tertiary-400 transition-all duration-300 border border-tertiary-base hover:shadow-lg font-mono text-sm"
					>
						./about --verbose
					</a>
					<a 
						href={routes.works} 
						class="inline-flex items-center px-4 py-2 bg-transparent border border-tertiary-base text-tertiary-base font-semibold hover:bg-tertiary-base hover:text-primary-1000 transition-all duration-300 font-mono text-sm"
					>
						ls ~/projects/
						<span class="ml-2">â†’</span>
					</a>
				</div>
			</div>

			<!-- Current Focus Section -->
			<div class="mb-12">
				<div class="text-tertiary-base mb-2">
					<span class="text-secondary-400">atish@terminal</span>:<span class="text-tertiary-base">~</span>$ ps aux | grep "current_focus"
				</div>
				<div class="pl-4 mb-6">
					<div class="text-text-400 mb-4">
						<span class="text-tertiary-base">></span> Found 3 active processes:
					</div>
					
					<div class="grid md:grid-cols-1 gap-4">
						{currentFocus.map((area, index) => (
							<a href={area.link} class="group block">
								<div class="bg-primary-900 border border-primary-700 p-6 hover:border-tertiary-base hover:bg-primary-850 transition-all duration-300">
									<div class="flex items-start space-x-4">
										<div class={`w-8 h-8 flex items-center justify-center font-bold text-lg ${
											index === 0 ? 'text-tertiary-400' :
											index === 1 ? 'text-secondary-400' :
											'text-tertiary-base'
										}`}>
											{area.symbol === "react" ? "âš›" : area.symbol}
										</div>
										<div class="flex-1">
											<div class="flex items-center justify-between mb-2">
												<h3 class="text-lg font-bold text-tertiary-200 group-hover:text-tertiary-base transition-colors font-mono">
													{area.title}
												</h3>
												<span class="text-xs text-text-500 font-mono">
													PID: {1000 + index}
												</span>
											</div>
											<p class="text-text-400 text-sm mb-2 font-mono">
												{area.description}
											</p>
											<div class="text-xs text-secondary-400 font-mono">
												$ {area.command}
											</div>
										</div>
									</div>
								</div>
							</a>
						))}
					</div>
				</div>
			</div>

			<!-- Recent Highlights -->
			<div class="mb-12">
				<div class="text-tertiary-base mb-2">
					<span class="text-secondary-400">atish@terminal</span>:<span class="text-tertiary-base">~</span>$ tail -n 10 ~/activity.log
				</div>
				<div class="pl-4 mb-6">
					<div class="text-text-400 mb-4">
						<span class="text-tertiary-base">></span> Recent activity:
					</div>
					
					<div class="space-y-4">
						{highlights.map((item, index) => (
							<article class="group">
								<a href={item.link} class="block">
									<div class="bg-primary-900 border border-primary-700 p-4 hover:border-tertiary-base hover:bg-primary-850 transition-all duration-300">
										<div class="flex items-center justify-between mb-2">
											<div class="flex items-center space-x-3">
												<span class="px-2 py-1 bg-tertiary-base text-primary-1000 font-mono text-xs">
													[{item.category.toUpperCase()}]
												</span>
												<span class="text-xs text-text-500 font-mono">{item.year}</span>
											</div>
											<span class="text-xs text-secondary-400 font-mono">
												{new Date().toLocaleDateString()} 12:3{index}
											</span>
										</div>
										
										<h3 class="text-lg font-bold text-tertiary-200 mb-2 group-hover:text-tertiary-base transition-colors font-mono">
											{item.title}
										</h3>
										
										<p class="text-text-400 text-sm mb-2 font-mono">
											{item.description}
										</p>
										
										<div class="text-xs text-secondary-400 font-mono">
											$ {item.command}
										</div>
									</div>
								</a>
							</article>
						))}
					</div>
				</div>
			</div>

			<!-- Available Commands -->
			<div class="mb-12">
				<div class="text-tertiary-base mb-2">
					<span class="text-secondary-400">atish@terminal</span>:<span class="text-tertiary-base">~</span>$ help
				</div>
				<div class="pl-4 mb-6">
					<div class="text-text-400 mb-4">
						<span class="text-tertiary-base">></span> Available commands:
					</div>
					
					<div class="grid md:grid-cols-3 gap-4">
						<a href={routes.about} class="block group">
							<div class="bg-primary-900 border border-primary-700 p-4 hover:border-tertiary-base hover:bg-primary-850 transition-all duration-300">
								<h3 class="text-md font-bold text-tertiary-200 mb-2 group-hover:text-tertiary-base transition-colors font-mono">
									./about
								</h3>
								<p class="text-text-400 text-xs font-mono">
									Display personal information, background, and interests
								</p>
								<div class="text-xs text-secondary-400 font-mono mt-2">
									--verbose --story --background
								</div>
							</div>
						</a>

						<a href={routes.works} class="block group">
							<div class="bg-primary-900 border border-primary-700 p-4 hover:border-tertiary-base hover:bg-primary-850 transition-all duration-300">
								<h3 class="text-md font-bold text-tertiary-200 mb-2 group-hover:text-tertiary-base transition-colors font-mono">
									ls ~/projects/
								</h3>
								<p class="text-text-400 text-xs font-mono">
									List all research projects, professional work, and builds
								</p>
								<div class="text-xs text-secondary-400 font-mono mt-2">
									--research --professional --personal
								</div>
							</div>
						</a>

						<a href={routes.blog} class="block group">
							<div class="bg-primary-900 border border-primary-700 p-4 hover:border-tertiary-base hover:bg-primary-850 transition-all duration-300">
								<h3 class="text-md font-bold text-tertiary-200 mb-2 group-hover:text-tertiary-base transition-colors font-mono">
									cat ~/thoughts/*
								</h3>
								<p class="text-text-400 text-xs font-mono">
									Read blog posts, insights on math, CS, and everything between
								</p>
								<div class="text-xs text-secondary-400 font-mono mt-2">
									--mathematics --code --philosophy
								</div>
							</div>
						</a>
					</div>
				</div>
			</div>

			<!-- Terminal Footer -->
			<div class="border-t border-primary-800 pt-4">
				<div class="text-tertiary-base mb-2">
					<span class="text-secondary-400">atish@terminal</span>:<span class="text-tertiary-base">~</span>$ echo "Thanks for visiting! Type any command to explore."
				</div>
				<div class="pl-4 text-text-400 font-mono text-sm">
					<span class="text-tertiary-base">></span> Session active since {new Date().toLocaleDateString()}
				</div>
				<div class="pl-4 text-text-500 font-mono text-xs mt-2">
					<span class="animate-pulse">â–ˆ</span> Ready for input...
				</div>
			</div>
		</div>
	</section>

	<style>
		/* Custom scrollbar for terminal feel */
		::-webkit-scrollbar {
			width: 8px;
		}
		
		::-webkit-scrollbar-track {
			background: #0F0110;
		}
		
		::-webkit-scrollbar-thumb {
			background: #FF7D00;
			border-radius: 4px;
		}
		
		::-webkit-scrollbar-thumb:hover {
			background: #FFA855;
		}

		/* Terminal cursor animation */
		@keyframes blink {
			0%, 50% { opacity: 1; }
			51%, 100% { opacity: 0; }
		}
		
		.animate-pulse {
			animation: blink 1s infinite;
		}

		/* Terminal text selection */
		::selection {
			background: #FF7D00;
			color: #0F0110;
		}

		/* Monospace font stack for better terminal feel */
		.font-mono {
			font-family: 'Fira Code', 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
		}
	</style>
</Layout>
