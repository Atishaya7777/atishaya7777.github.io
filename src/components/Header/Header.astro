---

import { Navbar, NavLink } from '../Navbar';

import routes from '../../global/routes'

import type { INavLink } from '../Navbar/types.ts';

const navbarData: INavLink[] = [
	{
		url: routes.home,
		label: 'Home',
	},
	{
		url: routes.about,
		label: 'About Me',
	},
	{
		url: routes.works,
		label: 'Works',
	},
	{
		url: routes.blog,
		label: 'Blog',
	},
	{
		url: routes.contact,
		label: 'Contact Me',
	},
];

---

<header class="flex justify-center py-3 border-b-2 border-primary-600 dark:border-primary-100">
	<Navbar>
		{navbarData.map((n: INavLink) => <NavLink {...n} />)}
	</Navbar>
</header>
