---
import TerminalPrompt from '../TerminalPrompt/TerminalPrompt.astro';
---

<footer class="border-t border-primary-800 pt-6 mt-12">
	<TerminalPrompt command='echo "Thanks for visiting! Ready to explore more?"' />
	<div class="pl-4 space-y-3">
		<div class="text-text-400 font-mono text-sm flex items-center space-x-2">
			<span class="text-tertiary-base">></span> 
			<span>Session active since {new Date().toLocaleDateString()}</span>
			<div class="flex items-center space-x-1 ml-4">
				<div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
				<span class="text-green-400 text-xs">CONNECTED</span>
			</div>
		</div>
		
		<div class="flex flex-col md:flex-row items-center justify-between">
			<div class="text-text-500 font-mono text-xs flex items-center space-x-2">
				<span class="animate-pulse">â–ˆ</span> 
				<span>Ready for input...</span>
			</div>
			
			<!-- Social Links as Terminal Commands -->
			<div class="flex flex-col md:flex-row items-center md:space-x-4 text-xs">
				<a href="mailto:contact@atish.dev" class="text-secondary-400 hover:text-tertiary-base transition-colors font-mono underline">
					./contact --email
				</a>
				<a href="https://github.com/atish" class="text-secondary-400 hover:text-tertiary-base transition-colors font-mono underline">
					git remote -v
				</a>
				<a href="https://linkedin.com/in/atish" class="text-secondary-400 hover:text-tertiary-base transition-colors font-mono underline">
					./network --professional
				</a>
			</div>
		</div>
		
		<!-- System Info -->
		<div class="text-xs text-text-600 font-mono pt-2 border-t border-primary-800">
			<div class="flex items-center justify-between">
				<span>System: Portfolio OS v2.0 | Shell: bash 5.1</span>
				<span>Uptime: {Math.floor(Math.random() * 30) + 1} days</span>
			</div>
		</div>
	</div>
</footer>
