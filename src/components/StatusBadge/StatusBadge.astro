---
interface Props {
	status: string;
	className?: string;
}

const { status, className = "" } = Astro.props;

const statusConfig = {
	active: {
		bg: 'bg-tertiary-900',
		text: 'text-tertiary-400',
		border: 'border-tertiary-700'
	},
	completed: {
		bg: 'bg-primary-850',
		text: 'text-text-400',
		border: 'border-primary-600'
	},
	running: {
		bg: 'bg-secondary-900',
		text: 'text-secondary-400',
		border: 'border-secondary-700'
	},
	developing: {
		bg: 'bg-tertiary-900',
		text: 'text-tertiary-400',
		border: 'border-tertiary-700'
	}
};

const config = statusConfig[status.toLowerCase() as keyof typeof statusConfig] || statusConfig.completed;
---

<span class={`px-2 py-1 text-xs font-mono rounded ${config.bg} ${config.text} border ${config.border} ${className}`}>
	[{status.toUpperCase()}]
</span>

