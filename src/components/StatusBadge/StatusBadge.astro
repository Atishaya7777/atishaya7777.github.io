---
interface Props {
	status: string;
	className?: string;
}

const { status, className = "" } = Astro.props;

const statusConfig = {
	active: {
		bg: 'bg-green-900',
		text: 'text-green-400',
		border: 'border-green-700'
	},
	completed: {
		bg: 'bg-primary-850',
		text: 'text-text-400',
		border: 'border-primary-600'
	},
	running: {
		bg: 'bg-blue-900',
		text: 'text-blue-400',
		border: 'border-blue-700'
	},
	developing: {
		bg: 'bg-yellow-900',
		text: 'text-yellow-400',
		border: 'border-yellow-700'
	}
};

const config = statusConfig[status.toLowerCase() as keyof typeof statusConfig] || statusConfig.completed;
---

<span class={`px-2 py-1 text-xs font-mono rounded ${config.bg} ${config.text} border ${config.border} ${className}`}>
	[{status.toUpperCase()}]
</span>

