---
interface Props {
	title: string;
	subtitle?: string;
	description?: string;
	className?: string;
}

const {
	title,
	subtitle,
	description,
	className = "",
} = Astro.props;
---

<section class={`py-16 lg:py-24 ${className}`}>
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<!-- Section header -->
		<div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
			{subtitle && (
				<div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-accent-50 text-accent-700 border border-accent-200 mb-4">
					{subtitle}
				</div>
			)}
			
			<h2 class="text-display-sm lg:text-display-md font-black text-gray-900 mb-6 text-balance">
				{title}
			</h2>
			
			{description && (
				<p class="text-body-lg text-gray-600 leading-relaxed text-balance">
					{description}
				</p>
			)}
		</div>

		<!-- Content slot -->
		<div class="animate-on-scroll" style="animation-delay: 0.2s;">
			<slot />
		</div>
	</div>
</section>
