---

import { Image } from 'astro:assets';
import FullLogo from '../../assets/logo-full.svg';

import routes from '../../global/routes';

interface Props {
	class?: string | string[];
}

const { class: className } = Astro.props;


---

<nav class:list={["flex items-center max-w-screen-xl w-full justify-between", className]}>
	<a href={routes.home}>
		<Image src={FullLogo} alt="@tish" />
	</a>
	<div class="flex">
		<slot />	
	</div>
</nav>
