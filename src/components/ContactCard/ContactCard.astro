---
interface Props {
	title: string;
	description: string;
	href: string;
	linkText: string;
	icon?: string;
	iconBg?: string;
	className?: string;
}

const { 
	title,
	description,
	href,
	linkText,
	icon = "@",
	iconBg = "text-secondary-400",
	className = ""
} = Astro.props;
---

<div class={`bg-primary-900 border border-primary-700 p-3 md:p-6 hover:border-secondary-600 transition-colors ${className}`}>
	<div class="flex items-start md:space-x-4 mb-4">
		<div class={`hidden w-8 h-8 md:flex items-center justify-center font-bold text-lg ${iconBg}`}>
			{icon}
		</div>
		<div class="flex-1">
			<h3 class="text-lg font-bold text-tertiary-200 mb-2 font-mono">
				{title}
			</h3>
			<p class="text-text-400 text-sm mb-4 font-mono">
				{description}
			</p>
		</div>
	</div>
	<a 
		href={href}
		class="inline-flex items-center text-secondary-400 hover:text-secondary-300 font-mono text-sm transition-colors underline"
	>
		{linkText}
		<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
		</svg>
	</a>
</div>

