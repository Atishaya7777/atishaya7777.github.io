---
interface Props {
	category: string;
	skills: string[];
	icon?: string;
	index?: number;
	className?: string;
}

const { category, skills, icon = "", index = 0, className = "" } = Astro.props;
---

<div class={`bg-primary-900 border border-primary-700 hover:border-secondary-600 transition-colors group ${className}`}>
	<div class="p-6">
		<div class="mb-4">
			<h3 class="text-md font-bold text-tertiary-200 font-mono">
				{category}
			</h3>
		</div>
		
		<div class="space-y-2">
			{skills.map((skill) => (
				<div class="flex items-center">
					<span class="w-2 h-2 bg-tertiary-400 rounded-full mr-3 flex-shrink-0"></span>
					<span class="text-xs text-text-400 font-mono">{skill}</span>
				</div>
			))}
		</div>
	</div>
</div>

